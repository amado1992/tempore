@using Tempore.App.Components

@inherits LayoutComponentBase

@if (IsAuthenticated)
{
    <MudThemeProvider Theme="currentTheme" />
    <MudDialogProvider />
    <MudSnackbarProvider />

    <MudLayout>
        <MudAppBar Elevation="0">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            <MudSpacer />
            <NotificationConnector />
            <CultureSelector />
            <UserMenu/>
        </MudAppBar>
        <MudDrawer @bind-Open="IsDrawerOpen" Elevation="1" ClipMode="DrawerClipMode.Never">
            <MudDrawerHeader>
                <MudImage Src="media/tempore-identity.png" Height="50" ObjectPosition="ObjectPosition.Center" Class="ml-10"/>
            </MudDrawerHeader>
            <NavMenu />
        </MudDrawer>
        <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.False" Class="my-4 pt-4 ml-4">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudLayout>
}

